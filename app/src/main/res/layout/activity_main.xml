<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:id="@+id/rootLayout"
        tools:context="com.uberclone.rider.MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BeDrivee"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="RIDER"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="LOOKING FOR DRIVER APP?"
            android:textAlignment="center"
            android:textColor="@color/bottomText"
            android:textSize="12sp"
            android:id="@+id/textView"/>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="16dp"
            android:layout_above="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginRight="6dp"
                android:id="@+id/btnSignin"
                android:textColor="@color/colorPrimary"
                android:text="SIGN IN"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_sign_in_background"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginLeft="6dp"
                android:id="@+id/btnRegister"
                android:textColor="@color/btn_register"
                android:text="REGISTER"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_register_background"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

